{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": [
    "react"
  ],
  "ecmaFeatures": {
    "jsx": true
  },
  "rules": {
    "no-var": 2,
    "prefer-const": 1,
    "generator-star-spacing": [2, "after"],

    "no-unused-vars": [1, { "args": "none" }],
    "no-underscore-dangle": 1,
    "indent": 2,
    "brace-style": [2, "1tbs"],
    "comma-style": [2, "last"],
    "default-case": 2,
    "guard-for-in": 2,
    "no-floating-decimal": 2,
    "radix": 2,
    "space-after-function-name": [2, "always"],
    "space-after-keywords": [2, "always"],
    "space-before-blocks": 2,
    "spaced-line-comment": [2, "always", { "exceptions": ["-"]}],
    "strict": [2, "global"],
    "valid-jsdoc": [2, { "prefer": { "return": "returns"}}],
    "wrap-iife": 2
  }
}
